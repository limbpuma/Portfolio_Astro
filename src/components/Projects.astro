---
// Importaciones necesarias
import { getI18N } from '../i18n';
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const sectionId = 'projects';
const projects = i18n.PROJECTS.PROJECT_LIST;
import SectionTitle from './SectionTitle.astro';

import Social from '../components/Social.astro';

const projectSpecificLinks = {
  "Project 1": [
    { url: "https://astro-tailwind-shop.vercel.app/", iconClass: "fas fa-globe", label: "Project 1 Website" },
    { url: "https://github.com/limbpuma/Astro_Tailwind_Shop", iconClass: "fab fa-github", label: "Project 1 GitHub" }
  ],
  "Project 2": [
    { url: "https://astro-barber-web.vercel.app/", iconClass: "fas fa-globe", label: "Project 2 Website" },
    { url: "https://github.com/limbpuma/Astro_Barber_web", iconClass: "fab fa-github", label: "Project 2 GitHub" }
  ]
 
};


---

<div id="projects_section" class="container mx-auto p-4">
  <SectionTitle sectionId={sectionId} />
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    {projects.map((project) => (
      <div class="card w-full shadow-lg hover:shadow-2xl transition-transform duration-700 ease-in-out transform hover:scale-105 group ">
        <figure class="overflow-hidden">
          <img src={project.IMAGE} alt={project.TITLE} class="transition-transform duration-700 ease-in-out group-hover:scale-110"/>
        </figure>
        <div class="card-body flex items-center">
          <h2 class="card-title">
            {project.TITLE}
            <div class="badge badge-secondary">{project.BADGE}</div>
          </h2>
          <p>{project.DESCRIPTION}</p>
          <div class="card-actions justify-end">
            {project.CATEGORIES.map((category) => (
              <div class="badge badge-outline">{category}</div>
              
            ))}
          </div>
          <div class="flex gap-4 justify-center">
            <Social links={projectSpecificLinks[project.TITLE] || []} />
        </div>
        </div>
      </div>
    ))}
  </div>
</div>
