---
import { getI18N } from '../i18n';
const { currentLocale} = Astro
const i18n = getI18N({currentLocale});
import AIEnhancedHero from './AIEnhancedHero.jsx';

// Textos din√°micos para el efecto de typing
const dynamicTexts = [
  i18n.HERO.DYNAMIC_TEXT_1 || "LangChain & OpenAI Developer",
  i18n.HERO.DYNAMIC_TEXT_2 || "Microsoft AI-900 Certified", 
  i18n.HERO.DYNAMIC_TEXT_3 || "Modern Web Developer",
  i18n.HERO.DYNAMIC_TEXT_4 || "Seeking Internship Aug 2025"
];

const statusTexts = {
  aiEnhanced: i18n.HERO.STATUS_AI_ENHANCED || "AI-Enhanced",
  availableInternship: i18n.HERO.STATUS_AVAILABLE_INTERNSHIP || "Available for Internship",
  dortmundReady: i18n.HERO.STATUS_DORTMUND_READY || "Dortmund Ready"
};
---

<div class="hero min-h-screen">
  <AIEnhancedHero 
    title={i18n.HERO.TITLE}
    dynamicTexts={dynamicTexts}
    description={i18n.HERO.DESCRIPTION}
    ctaText={i18n.HERO.BUTTON}
    ctaLink="#education_section"
    statusTexts={statusTexts}
    showCertification={true}
    client:load
  />
</div>
